    public static void main(String[] args) {
        String n1 = JOptionPane.showInputDialog("Dame 2 numero enteros: ");
        String n2 = JOptionPane.showInputDialog("Dame 2 numero enteros: ");
        String operador = JOptionPane.showInputDialog("Dame el operador que deseas usar: ");
        int n1int = Integer.parseInt(n1);
        int n2int = Integer.parseInt(n2);
        

        switch (operador) {
            case "+":
                System.out.println(n1int+n2int);
                break;
            case "-":
                System.out.println(n1int-n2int);
                break;                    
            case "*":
                System.out.println(n1int*n2int);
                break;
            case "/":
                System.out.println(n1int/n2int);
                break;
            case "%":
                System.out.println(n1int%n2int);
                break;  
